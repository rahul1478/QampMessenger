<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sheet_back_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/attachment_bottomsheet_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:background="@drawable/attachment_bottomsheet_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/emoji5" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/emoji1" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/emoji2" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/emoji3" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/emoji4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bordered_view"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/delete_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:clickable="false"
                        android:src="@drawable/ico_delete"
                        app:tint="#828282" />

                    <TextView
                        android:id="@+id/gallery_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:clickable="false"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="21sp"
                        android:text="@string/Delete_text"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color17"
                        android:textSize="14sp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/copy"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bordered_view"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/copy_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:clickable="false"
                        android:src="@drawable/ico_copy"
                        app:tint="#828282" />

                    <TextView
                        android:id="@+id/copy_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:clickable="false"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="21sp"
                        android:text="@string/copy_text"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color17"
                        android:textSize="14sp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reply"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bordered_view"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/reply_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:clickable="false"
                        android:rotationY="180"
                        android:src="@drawable/ico_forward"
                        app:tint="#828282" />

                    <TextView
                        android:id="@+id/reply_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:clickable="false"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="21sp"
                        android:text="Reply"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color17"
                        android:textSize="14sp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forward"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bordered_view"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/forward_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:clickable="false"
                        android:src="@drawable/ico_forward"
                        app:tint="#828282" />

                    <TextView
                        android:id="@+id/forward_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:clickable="false"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="21sp"
                        android:text="Forward"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color17"
                        android:textSize="14sp"></TextView>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>

